<!DOCTYPE html>
<html>
  <head>
    <title>GamePlanner</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
  </head>
    <nav class = "top-nav">
      <%= button_to "Communities", communities_path, method: :get %>
      <%= button_to "Games", games_path, method: :get %>
      <%= button_to "New Session", new_session_path, method: :get %>
      <% if !session[:user_id] %>
          <%= button_to "Create Account", new_user_path, method: :get %>
          <%= button_to "Login", login_path, method: :get %>
        <% else %>
        <%= button_to "My Profile", user_path(User.find_by(id: session[:user_id])), method: :get %>
        <%= button_to "Logout", logout_path, method: :post %>
      <% end %>
    </nav>
    <%= flash.alert %>
  <body>
    

    <%= yield %>

  </body>
</html>
